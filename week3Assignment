body {
  font-family: 'Arial', sans-serif;
  background-color: #f0f0f0;
  color: #333;
  margin: 0;
  padding: 0;
}

/* ID selector */
#header {
  background-color: #2c3e50;
  color: white;
  padding: 20px;
  text-align: center;
  border-bottom: 4px solid #1abc9c;
}

/* Class selector */
.container {
  margin: 40px auto;
  padding: 20px;
  max-width: 800px;
  background-color: #ffffff;
  border: 1px solid #ccc;
  border-radius: 8px;
}

/* Another class selector */
.highlight {
  color: #e74c3c;
  font-weight: bold;
}

/* Style image */
.image-box {
  display: block;
  margin: 20px auto;
  max-width: 100%;
  border: 3px solid #1abc9c;
  border-radius: 10px;
}

/* Footer styling */
#footer {
  background-color: #ecf0f1;
  text-align: center;
  padding: 15px;
  font-size: 0.9em;
  border-top: 1px solid #bdc3c7;
}
